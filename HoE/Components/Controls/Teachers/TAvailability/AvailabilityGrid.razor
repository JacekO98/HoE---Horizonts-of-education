@using HoE.Components.ViewModels

<div class="availability-grid">
    @foreach (var slot in Slots){
        <AvailabilitySlot
        Slot="slot"
        OnClick="() => OnSlotClicked.InvokeAsync(slot)" />
    }
</div>
@code {
    [Parameter]
    public List<AvailabilitySlotViewModel> Slots { get; set; } = [];

    [Parameter]
    public EventCallback<AvailabilitySlotViewModel> OnSlotClicked { get; set; }
}
